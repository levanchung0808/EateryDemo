<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="170dp"
    android:layout_margin="5dp"
    android:id="@+id/rlitem_nhahanghinhvuong"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_NhaHangVuong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivImage_NhaHangVuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_quanan" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivVerify_NhaHangVuong"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_verify"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_NhaHangVuong"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvTenNhaHang_NhaHangVuong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:fontFamily="@font/montserrat_medium"
        android:text="Tên nhà hàng"
        android:textColor="#000"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/ivVerify_NhaHangVuong"
        app:layout_constraintStart_toEndOf="@+id/ivVerify_NhaHangVuong"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivDanhGia"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintStart_toStartOf="@+id/ivVerify_NhaHangVuong"
        app:layout_constraintTop_toBottomOf="@+id/tvTenNhaHang_NhaHangVuong"/>

    <TextView
        android:id="@+id/tvDanhGia_NhaHangVuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="4.2"
        android:textColor="#000"
        android:textSize="5pt"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDanhGia"
        app:layout_constraintTop_toTopOf="@id/ivDanhGia"
        app:layout_constraintStart_toEndOf="@id/ivDanhGia"/>

</androidx.constraintlayout.widget.ConstraintLayout>