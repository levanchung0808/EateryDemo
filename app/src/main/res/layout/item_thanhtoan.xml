<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ItemMonAn_ThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/ivImage_NhaHang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    android:src="@drawable/demo_nhahang" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_TenMonAn_ItemThanhToan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cv_ItemMonAn_ThanhToan"
                android:fontFamily="@font/montserrat_medium"
                android:text="Tên món ăn"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/txt_GiaMonAn_ItemThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_TenMonAn_ItemThanhToan"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cv_ItemMonAn_ThanhToan"
                android:fontFamily="@font/montserrat_medium"
                android:text="45.000đ" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_SoLuong_ItemThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/img_Cancel_ItemThanhToan"
                app:cardCornerRadius="20dp"
                app:cardElevation="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/img_GiamSoLuong_ItemThanhToan"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_baseline_remove_24"
                        android:backgroundTint="#000" />

                    <TextView
                        android:id="@+id/txt_SoLuong_ItemThanhToan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/img_GiamSoLuong_ItemThanhToan"
                        android:text="1"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/img_TangSoLuong_ItemThanhToan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt_SoLuong_ItemThanhToan"
                        android:background="@drawable/ic_them"
                        android:backgroundTint="#000" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_Cancel_ItemThanhToan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_baseline_cancel_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>