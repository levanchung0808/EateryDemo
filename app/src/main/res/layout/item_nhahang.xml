<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlitem_nhahanghcn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ItemNhaHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/ivImage_NhaHang"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="center"
                    android:src="@drawable/demo_nhahang" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTenNhaHang_ItemNhaHang"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/cv_ItemNhaHang"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="Tên nhà hàng"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvLoaiNhaHang_ItemNhaHang"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/tvTenNhaHang_ItemNhaHang"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/cv_ItemNhaHang"
                android:fontFamily="@font/montserrat_light"
                android:text="Loại nhà hàng" />

            <TextView
                android:id="@+id/tvDiaChi_ItemNhaHang"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLoaiNhaHang_ItemNhaHang"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/cv_ItemNhaHang"
                android:fontFamily="@font/montserrat_regular"
                android:text="Nàm Kỳ Khởi Nghĩa - Quận 19, TP. HCM"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/ivDanhGia_ItemNhaHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/_5sao" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>