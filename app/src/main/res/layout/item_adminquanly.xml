<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlitem_adminquanly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ItemAdminQuanLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/ivImage_AdminQuanLy"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="center"
                    android:src="@drawable/demo_nhahang" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_AdminQuanly1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/cv_ItemAdminQuanLy"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_AdminQuanly2"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_AdminQuanly1"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/cv_ItemAdminQuanLy"
                android:fontFamily="@font/montserrat_light"
                android:text="TextView2" />

            <TextView
                android:id="@+id/tv_AdminQuanly3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_AdminQuanly2"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/cv_ItemAdminQuanLy"
                android:fontFamily="@font/montserrat_regular"
                android:text="TextView3"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/img_EditAdminQuanLy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:id="@+id/img_DeleteAdminQuanLy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>