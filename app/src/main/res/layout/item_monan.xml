<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rlitem_monan"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img_ItemMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/img_ItemMonAn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="center"
            android:src="@drawable/demo_nhahang" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ItemMonAn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/white"

        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_TenMonAn_ItemMonAn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Mỳ Ý sốt Spaghetti yum yum"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_GiaMonAn_ItemMonAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_TenMonAn_ItemMonAn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="120.000đ" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>