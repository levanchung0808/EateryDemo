<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ItemMonAn_ThongKe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/iv_MonAn_ThongKe"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="center"
                    android:src="@drawable/demo_nhahang" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTenMonAn_ThongKe"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/cv_ItemMonAn_ThongKe"
                android:text="Tên nhà hàng"
                android:textColor="#37933B"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tvLoaiNhaHang_ItemNhaHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/tvTenMonAn_ThongKe"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="Doanh thu"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvTienTungMonAn_ThongKe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLoaiNhaHang_ItemNhaHang"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tvTenMonAn_ThongKe"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="20.000.000d"
                android:textColor="#000"
                android:textSize="18dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>