<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tlChinhssua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_bold"
                android:text="Thêm mã khuyến mãi"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imgNhaHangKhuyenMai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tlChinhssua"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/imgMaKhuyen"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:src="@drawable/demo_nhahang" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/txtTenKhuyenMaidialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tlChinhssua"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"

                android:text="Sài gòn giảm giá 50%"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/txtSoLuongKhuyenMaidialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/montserrat_semibold"
                android:hint="Số lượng"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/txtTienKhuyenMaidialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"


                android:fontFamily="@font/montserrat_semibold"
                android:hint="Tiền"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtThemMadialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_purple"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="GGSG50"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMadialog"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChinhSuadialog"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_purple"
                    android:text="Chỉnh sửa"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHuydialog"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_purple"
                    android:text="Hủy"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>







