<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    >

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_light" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:boxStrokeWidth="0dp"
        android:layout_margin="10dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butonlogin"
        android:hint="Code"
        android:textSize="20sp"
        android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNhapMatKhauMoi_DoiMatKhau1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="255dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMatKhauMoi_DoiMatKhauMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/butonlogin"
            android:hint="Mật khẩu mới"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNhapLaiMatKhauMoi_DoiMatKhau1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:textColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="#000"
            >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNhapLaiMatKhau_DoiMatKhauMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/butonlogin"
            android:hint="Nhập lại mật khẩu mới"

        </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDoiMatKhau_DoiMatKhauMoi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonlogin"
        android:text="Đôi mật khẩu"
        android:textColor="@color/white"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDoiMatKhau"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/buttonlogin"
            android:text="Đôi mật khẩu"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>